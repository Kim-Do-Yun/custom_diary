<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="TouchTargetSizeCheck">

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        app:tint="#222222"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- 회원가입 타이틀 -->
    <TextView
        android:id="@+id/signupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="18sp"
        android:textColor="#222222"
        android:fontFamily="@font/pretendardvariable"
        android:fontWeight="600"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 스크롤 가능한 컨텐츠 영역 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 진행률 표시 -->
            <LinearLayout
                android:id="@+id/progressContainer"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FF6F61"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FF6F61"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FF6F61"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5" />
            </LinearLayout>

            <!-- 타이틀 -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비밀번호를\n다시 입력해주세요"
                android:textSize="28sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:fontFamily="@font/pretendardvariable"
                android:fontWeight="800"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@id/progressContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" />

            <!-- 비밀번호 재입력 필드 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/passwordFieldContainer"
                android:layout_width="0dp"
                android:layout_height="56dp"
                app:layout_constraintTop_toBottomOf="@id/titleText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <EditText
                    android:id="@+id/passwordConfirmEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="비밀번호 재입력"
                    android:textSize="18sp"
                    android:textColor="#222222"
                    android:textColorHint="#CCCCCC"
                    android:inputType="textPassword"
                    android:paddingStart="0dp"
                    android:paddingEnd="40dp"
                    android:fontFamily="@font/pretendardvariable"
                    android:fontWeight="500"
                    android:maxLines="1"
                    android:imeOptions="actionDone" />

                <!-- 비밀번호 보기/숨기기 토글 -->
                <ImageView
                    android:id="@+id/passwordToggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_visibility_off"
                    android:tint="#666666"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="2dp" />

                <!-- 밑줄 -->
                <View
                    android:id="@+id/passwordUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E0E0E0"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 에러 메시지 -->
            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비밀번호가 일치하지 않습니다"
                android:textSize="14sp"
                android:textColor="#FF5252"
                android:fontFamily="@font/pretendardvariable"
                android:fontWeight="500"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/passwordFieldContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 다음 버튼 -->
    <TextView
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="다음"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:fontWeight="600"
        android:gravity="center"
        android:background="@drawable/button_disabled_background"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 