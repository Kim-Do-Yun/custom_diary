<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <!-- 상단 패딩을 상태바 높이만큼 추가 -->
    <View
        android:id="@+id/statusBarSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_min="24dp"/>

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:tint="#222222"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpace"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- 회원가입 타이틀 -->
    <TextView
        android:id="@+id/signupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="18sp"
        android:textColor="#222222"
        android:fontFamily="@font/pretendardvariable"
        android:fontWeight="600"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 스크롤 가능한 컨텐츠 영역 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 진행률 표시 -->
            <LinearLayout
                android:id="@+id/progressContainer"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FF6F61"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5" />
            </LinearLayout>

            <!-- 타이틀 -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="사용할 이메일 주소를\n입력해주세요"
                android:textSize="26sp"
                android:textColor="#222222"
                android:fontFamily="@font/pretendardvariable"
                android:fontWeight="800"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@id/progressContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" />

            <!-- 이메일 입력 필드 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/emailFieldContainer"
                android:layout_width="0dp"
                android:layout_height="56dp"
                app:layout_constraintTop_toBottomOf="@id/titleText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="이메일을 입력해주세요"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:textColorHint="#CCCCCC"
                    android:inputType="textEmailAddress"
                    android:paddingStart="0dp"
                    android:paddingEnd="40dp"
                    android:fontFamily="@font/pretendardvariable"
                    android:fontWeight="500"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

                <!-- 이메일 유효성 체크 아이콘 (처음엔 숨김) -->
                <ImageView
                    android:id="@+id/emailValidIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check"
                    android:tint="#FF6F61"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- 로딩 인디케이터 (처음엔 숨김) -->
                <ProgressBar
                    android:id="@+id/loadingIndicator"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:indeterminateTint="#FF6F61"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- 밑줄 -->
                <View
                    android:id="@+id/emailUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E0E0E0"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 에러 메시지 (처음엔 숨김) -->
            <TextView
                android:id="@+id/errorText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="올바른 이메일 주소를 입력해주세요"
                android:textSize="14sp"
                android:textColor="#FF5252"
                android:fontFamily="@font/pretendardvariable"
                android:fontWeight="500"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/emailFieldContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 다음 버튼 -->
    <TextView
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="다음"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:fontWeight="600"
        android:gravity="center"
        android:background="@drawable/button_disabled_background"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 