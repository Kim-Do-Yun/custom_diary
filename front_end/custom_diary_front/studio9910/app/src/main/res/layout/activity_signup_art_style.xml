<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <!-- 상단 패딩을 상태바 높이만큼 추가 -->
    <View
        android:id="@+id/statusBarSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_min="24dp"/>

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:tint="#222222"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpace"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- 회원가입 타이틀 -->
    <TextView
        android:id="@+id/signupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="18sp"
        android:textColor="#222222"
        android:fontFamily="@font/pretendardvariable"
        android:fontWeight="600"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 스크롤 가능한 컨텐츠 영역 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 타이틀 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선호하는 그림체를\n선택해주세요"
                android:textSize="26sp"
                android:textColor="#222222"
                android:fontFamily="@font/pretendardvariable"
                android:fontWeight="800"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp" />

            <!-- 안내 텍스트 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하나를 선택해주세요"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/pretendardvariable"
                android:fontWeight="500"
                android:layout_marginBottom="48dp" />

            <!-- 아트 스타일 그리드 (3열 2행) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 첫 번째 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- 아트 스타일 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/artStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/art_style_placeholder_1"
                            android:background="@drawable/art_style_unselected"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="로맨틱"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/pretendardvariable"
                            android:fontWeight="500"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- 아트 스타일 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/artStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/art_style_placeholder_2"
                            android:background="@drawable/art_style_unselected"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모던"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/pretendardvariable"
                            android:fontWeight="500"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- 아트 스타일 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:id="@+id/artStyle3"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/art_style_placeholder_3"
                            android:background="@drawable/art_style_unselected"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="클래식"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/pretendardvariable"
                            android:fontWeight="500"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 두 번째 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 아트 스타일 4 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/artStyle4"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/art_style_placeholder_4"
                            android:background="@drawable/art_style_unselected"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미니멀"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/pretendardvariable"
                            android:fontWeight="500"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- 아트 스타일 5 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/artStyle5"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/art_style_placeholder_5"
                            android:background="@drawable/art_style_unselected"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="판타지"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/pretendardvariable"
                            android:fontWeight="500"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- 아트 스타일 6 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:id="@+id/artStyle6"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/art_style_placeholder_6"
                            android:background="@drawable/art_style_unselected"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="큐트"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="@font/pretendardvariable"
                            android:fontWeight="500"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 다음 버튼 -->
    <TextView
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="회원가입 완료"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:fontWeight="600"
        android:gravity="center"
        android:background="@drawable/button_disabled_background"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 